# Aphasia extercise using playing card suits
# Version 1

import os # clear terminal
import random
from colorama import Fore, Back, Style # Python package

card_suits = ['♥','♦','♣','♠']
card_color = Fore.RED
card_name = "Hearts"
os.system('cls') # clear terminal on Windows

while True:
	print ("\n")
	random_card_suit = random.randrange(4)
	if random_card_suit == 0:
		card_color = Fore.RED
		card_text = "Hearts"
	if random_card_suit == 1:
		card_color = Fore.RED
		card_text = "Diamonds"
	if random_card_suit == 2:
		card_color = Fore.BLACK
		card_text = "Clubs"
	if random_card_suit == 3:
		card_color = Fore.BLACK
		card_text = "Spades"
	print ( card_color + Back.WHITE + card_suits[random_card_suit] )
	print(Style.RESET_ALL)
	input ("")
	print (card_text)
	c = input ("\nAny key to continue or type exit\n")
	if c == "exit":
		os.system('cls')
		exit(0)
	os.system('cls')
# end of program
