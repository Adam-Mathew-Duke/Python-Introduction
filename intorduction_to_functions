# def is short for define
# empty () means the function does not need any input paramaters

def hello_world():
    print('Hello World')
    
hello_world()

def greeting(name):
    print ('Hello ' + name + ' nice to meet you!')
    
greeting('Adam')

def add(num1,num2):
    print(num1+num2)
    
addition(10,25)

def save_add(num1,num2):
    return num1+num2

sum = save_add(12,34)
print(sum)

def ad(num1,num2):
    return num1+num2
 
def mul(num1,num2):
    return num1*num2

# the mul function takes 2 arguments and multiplies the result e.g. 3 x 7
# the ad function adds the 2 arguments together e.g. 1,2 = 3 and 3,4 = 7
print(mul(ad(1,2),ad(3,4)))
